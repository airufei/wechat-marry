
.container{
  background-color: #f1f2f7;
}
.chat_list {
    margin-left: 8px;
    margin-right: 8px;
    padding: 25rpx;
    min-height: 0;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
    background-color: #f1f2f7;
    box-shadow:  0 0 20px rgba(190,77,43,.2);
    margin-bottom: 18rpx;
    border-radius: 4%;
}
.chat_face {
    width: 100rpx;
    height: 100rpx;
    float: left;
    margin-right: 30rpx;
    margin-top: 30rpx;
}
.chat_face image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.chat_words {
    width: 500rpx;
    float: left;
    font-size: 30rpx;
    line-height: 50rpx;
    color: #999;
}
.chat_meta {
    width: 100%;
    min-height: 0;
    overflow: hidden;
    margin-bottom: 10rpx;
}
.chat_user {
    display: inline-block;
    font-size: 30rpx;
    font-weight: 600;
    color: #666;
    float: left;
}
.chat_date {
    display: inline-block;
    font-size: 24rpx;
    color: #ccc;
    float: right;
}

.send_msg {
    width: 700rpx;
    padding: 25rpx;  
    background-color: #fff;
    min-height: 0;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top: 1px solid #f1f1f1;
    border-bottom: 1px solid #f1f1f1;

}
.send_ipt {
    width: 500rpx;
    padding: 10rpx;
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    float: left;
    background-color: #f5f5f5;
    border-radius: 5px;
}
.send_btn {
    width: 150rpx;
    height: 80rpx;
    font-size: 36rpx;
    line-height: 80rpx;
    float: right;
    background: #CD96CD;
    color: white
}
.bottom_msg{
  margin-top: 2%;
  font-size: 12px;
  text-align: center;
  color: #999d9c;
}
.bottom_line{
  margin-top: 5%;
  width: 100%;
  border-top: 3rpx dashed #999d9c;
}
.photo_image_style{
  width: 100%;
  border-radius: 10px;
}
.bg_img{
  padding: 2px;
  width: 100%;
  height: auto;
  border-radius: 10px;
}
.aon{
position: absolute;
white-space:nowrap;/* 防止向下换行*/
animation-timing-function: linear;
animation-fill-mode: none;
}
.doommview{
  z-index: 1000;
  height: 80%;
  width: 100%;
  position: absolute;
}
.todeatil {
  margin-top: 2%;
  margin-bottom: 2%;
  height: 70rpx;
  right: 10px;
  border-radius: 10rpx;
  font-size: 28rpx;
 border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
}
.like_btn {
    width: 150rpx;
    height: 60rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    background: #CD96CD;
    text-align: center;
    float: right;
    border-radius: 10rpx;
    color: white
}
.share_btn {
    width: 150rpx;
    height: 60rpx;
    margin-left: 5px;
    margin-right: 5px;
    font-size: 28rpx;
    line-height: 60rpx;
    text-align: center;
    float: right;
    background: #CD96CD;
    border-radius: 10rpx;
    color: white
}
@keyframes first{
  from{left: 100%; }
  to{left: -100%;}
}