@import "../../style/weui.wxss";

page {
  background: white;
  height: 100%;
}

.container {
  background: white;
  width: 100%;
  height: 100%;
  align-items: center;
}

.table_center {
  width: 100%;
  margin-top: 35%;
  align-items: center;
}

.content_center {
  width: 100%;
  margin-top: 8%;
  text-align: center;
  margin-left: 4%;
}

.content_center_select {
  margin-top: 8%;
  text-align: center;
  margin-left: 4%;
  border: 1rpx solid #cd96cd;
  height: 60rpx;
  line-height: 60rpx;
  width: 500rpx;
  padding: 10rpx;
  background-color: #fff0f5;
  border-radius: 5px;
}

.send_ipt {
  width: 500rpx;
  padding: 10rpx;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  background-color: #fff0f5;
  border: 1rpx solid #cd96cd;
  border-radius: 5px;
}

.send_btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background: #cd96cd;
  color: white;
}

.getphone_btn {
  width: 120rpx;
  height: 70rpx;
  padding: 2rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  background: #cd96cd;
  color: white;
}
